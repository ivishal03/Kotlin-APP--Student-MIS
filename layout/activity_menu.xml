<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/menu_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Menu Header -->

        <!-- Menu Option 1: Profile -->

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/mycolor14"
            android:padding="20dp"
            app:cardCornerRadius="19dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="10dp"
                android:text="Menu"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/material_dynamic_neutral40"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"

                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/black" />
                <!-- android:src="@drawable/ic_option1" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFILE"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Menu Option 2: Marks and Result -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/marks_and_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/material_dynamic_neutral40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/black" />
                <!-- android:src="@drawable/ic_option2" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MARKS AND RESULT"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Menu Option 3: Subject and Teachers -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/subject_and_teachers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/material_dynamic_neutral40"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/black" />
                <!-- android:src="@drawable/ic_option3" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUBJECT &amp; TEACHERS"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Menu Option 6: Sports -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/material_dynamic_neutral40"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/black" />
                <!-- android:src="@drawable/ic_option6" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPORTS"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Menu Option 7: Cultural Activity -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cultural_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/material_dynamic_neutral40"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/black" />
                <!-- android:src="@drawable/ic_option7" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CULTURAL ACTIVITY"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Menu Option 9: Other Events -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/other_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/material_dynamic_neutral40"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/black" />
                <!-- android:src="@drawable/ic_option8" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTHER EVENTS"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Menu Option 8: Feedback and Suggestions -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/feedback_and_suggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/material_dynamic_neutral40"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/black" />
                <!-- android:src="@drawable/ic_option_feedback" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FEEDBACK &amp; SUGGESTIONS"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Menu Option 4: Help and Support -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/help_and_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/material_dynamic_neutral40"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/black" />
                <!-- android:src="@drawable/ic_option4" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HELP &amp; SUPPORT"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Menu Option 5: About -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/material_dynamic_neutral40"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/black" />
                <!-- android:src="@drawable/ic_option5" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABOUT"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>
</ScrollView>
