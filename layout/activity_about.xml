<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_bg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Section: About This App -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About This App"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Purpose -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="This app is designed to help students to easily access academic information efficiently. You can track your attendance, view your results, participate in different activity and get support when needed."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <!-- Key Features -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Features:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="• Attendance tracking\n• Results viewing\n• Academic Calendar\n• Notifications"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- User Guide -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Guide:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="To get started, log in with your student ID. Navigate through the app using the menu or bottom navigation for different features."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />


        <!-- Privacy Policy -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="We take your privacy seriously. All data is encrypted and stored securely."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Developer Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Designed and Developed by ->"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vishal Thakur"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priya"
            android:textSize="16sp"
            android:layout_marginTop="0dp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priyanshu Rajput"
            android:textSize="16sp"
            android:layout_marginTop="0dp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="350dp"
            android:text="Version: 1.0"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>
